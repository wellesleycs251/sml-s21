(******************************************************************************)
(* Provided helper function *)

(* val iterate = fn : ('a -> 'a) -> ('a -> bool) -> ('a -> 'b) -> 'a -> 'b *)
fun iterate next isDone finalize state =
  if isDone state then
      finalize state
  else
      iterate next isDone finalize (next state)

